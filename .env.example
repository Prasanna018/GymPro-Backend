# Copy this file to .env and fill in the values

# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority&appName=ClusterName
MONGODB_URL=mongodb+srv://username:password@cluster0.mongodb.net/?appName=Cluster0

# Database name
DATABASE_NAME=gympro

# JWT secret key â€” change this to a long random string in production
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT algorithm (do not change)
ALGORITHM=HS256

# Token expiry in minutes (10080 = 7 days)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Comma-separated allowed frontend origins
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000
